<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.timelineview.TimeLiner
        android:id="@+id/circleDot"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:circleColor="@android:color/holo_purple"
        app:circleRadius="5dp"
        app:leftPadding="30dp"
        app:topPadding="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAnimalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvAnimalNameExpanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expanded_text"
            android:textSize="60sp" android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>
